<% include includes/header %>
<form class="form-signin" method="post" action="/savePage/<%= pageData.displayName %>" enctype="multipart/form-data">
    <%- libs.editHtmlHelper.savePageBackToDash() %>
    <div class="container-fluid">
        <!-- Main hero unit for a primary marketing message or call to action
        -->
        <div class="row-fluid">
            <div class="span12">
                    <h1>
                        <%- libs.editHtmlHelper.editTextInput(pageData, "largeTitle", "Title") %>
                        <%- libs.editHtmlHelper.editTextInput(pageData, "miniTitle", "Slogan") %>
                    </h1>
                    <p>Logo (optional)</p> <%- libs.editHtmlHelper.editImgInput(pageData, 'logo') %>
            </div>
        </div>
    </div>
</form>
<% include includes/footer %>