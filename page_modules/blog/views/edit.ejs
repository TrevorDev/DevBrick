<% include includes/header %>
<form class="form-signin" action="/savePage/<%= pageData.displayName %>" method="post">
<div style="padding:20px;width:100%;">
        <button class="btn btn-primary btn-large" style="background-color:#333333;background-color:#222222;" type="submit">
            Save Page
        </button>
        <a href="/dashboard"><button class="btn btn-primary btn-large" style="background-color:#333333;background-color:#222222;" type=button>
            Back To Dashboard
        </button></a>
</div>

<div class="container-fluid hero-unit">
            <h1><%- libs.editHtmlHelper.editTextInput(pageData, "blogName", "Blog Name") %></h1>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="span12">
                <div class="well" style="overflow: hidden;">
                    <input type="text" placeholder="Post Title" name="postTitle">
                    <textarea style="width:100%;" placeholder="Post Text" rows="4" name="postText"></textarea>
                    <button class="pull-right btn" type="submit" name="submit" value="true">
                        Submit Post
                    </button>
                </div>
                <% for(var i=pageData.blogPosts.length-1; i>=0; i--) {%>
                    <div class="well">
                        <h4 class="media-heading"><%= pageData.blogPosts[i].heading %></h4><%= pageData.blogPosts[i].text %>
                        <button class="pull-right btn" type="submit" name="deletePost" value="<%=i%>">
                            Delete Post
                        </button>
                    </div>
                <% } %>
        </div>
    </div>             
</div>
</form>
<% include includes/footer %>